


{# add css to the new page #}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}

<form method="post" action="{{ path('app_stock_management_delete', {'id': stock_management.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock_management.id) }}">
    <button class="btn">Delete</button>
</form>


<style>
 button{
    font-family: "Playfair Display", serif;
    cursor:pointer;
    background-color: #0c343d;
    padding: 10px 30px;
    color:#fff;
    font-size:1.1em;
    border:none;
    transition: background 0.5s ease;
    margin-top:10px;
    width:150px;

    &:hover{
        background:#2a606c;
    }
     
 }
 </style>

{% endblock %}