
{# add css to the new page #}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<style>
    body{
        background:#305a63;
        color:#fff;
        margin:0;
        padding:0;
        font-family: "Playfair Display", serif;
    }

    .form-wrapper{
        width:700px;
        background:#0c343d;
        position:absolute;
        top:50%;
        left:50%;
        transform:translate(-50%, -50%);
        padding:30px;
        border-radius:5px;
        box-shadow:2px 2px 10px rgba(0, 0, 0, 0.9 );
       
    }
        .btn {
        font-family: "Playfair Display", serif;
        font-size:1.1em;
        letter-spacing:0.1em;
        background-color: #45818E;
        color: white;
        padding: 10px 40px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background 0.5s ease
    }

    .btn:hover {
        background: #3a6576;
    }

    a{
        color:#fff;
        text-transform:capitalize;
        margin-left:30px;
        text-decoration-color: #45818E; 
        text-decoration-thickness: 5px;  
    }

    .form-group{
        display:flex;
        justify-content:space-between;
        margin-bottom:8px;
    }

    .form-group input{
        width:60%;
        padding:5px;
    } 

    Label{
        letter-spacing:0.1em
    }

</style>

<div class = "form-wrapper">
        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>

               <div class="form-group">
                {{ form_label(form.ProductDescription) }}
                {{ form_widget(form.ProductDescription) }}
              </div>

            <div class="form-group">
                {{ form_label(form.AvailableQuantity) }}
                {{ form_widget(form.AvailableQuantity) }}
            </div>

             <div class="form-group">
                {{ form_label(form.PricePerItem) }}
                {{ form_widget(form.PricePerItem) }}
            </div>

             <div class="form-group">
                {{ form_label(form.ProductCategory) }}
                {{ form_widget(form.ProductCategory) }}
            </div>

             <div class="form-group">
                {{ form_label(form.Supplier) }}
                {{ form_widget(form.Supplier) }}
            </div>

             <div class="form-group">
                {{ form_label(form.sku ) }}
                {{ form_widget(form.sku ) }}
            </div>

             <div class="form-group">
                {{ form_label(form.location) }}
                {{ form_widget(form.location) }}
            </div>

             <div class="form-group">
                {{ form_label(form.CreationDate) }}
                {{ form_widget(form.CreationDate) }}
            </div>

             <div class="form-group">
                {{ form_label(form.MinimumStock) }}
                {{ form_widget(form.MinimumStock) }}
            </div>

             <div class="form-group">
                {{ form_label(form.LastPurchased) }}
                {{ form_widget(form.LastPurchased) }}
            </div>

             <div class="form-group">
                {{ form_label(form.TotalValue) }}
                {{ form_widget(form.TotalValue) }}
            </div>
                <button class="btn">{{ button_label|default('Save') }}</button>
                <a href="{{ path('app_stock_management_index') }}">back to list</a>
        {{ form_end(form) }}
</div>

{% endblock %}
